    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginHorizontal="30dp"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/txtLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/Location"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Find your Location"
                android:inputType="textPersonName"
                android:minHeight="48dp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageButton
                android:id="@+id/imgBtnSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_search_24"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_weight="1"
                android:background="background:@null"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTimeFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Frame"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtfrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="from"
                android:textSize="15sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/Datefrom"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="dd/mm/yyyy"
                    android:inputType="date"
                    android:minHeight="48dp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageButton
                    android:id="@+id/imgBtnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_calendar_month_24"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_weight="1"
                    android:background="background:@null"
                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <EditText
                    android:id="@+id/Timefrom"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Time..."
                    android:inputType="time"
                    android:minHeight="48dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/imgBtnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_access_time_24"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_weight="1"
                    android:background="background:@null"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txtto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="to"
                android:textSize="15sp"
                android:textColor="@color/black"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/Dateto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="dd/mm/yyyy"
                    android:inputType="date"
                    android:minHeight="48dp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageButton
                    android:id="@+id/imgBtnDateto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_calendar_month_24"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_weight="1"
                    android:background="background:@null"
                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <EditText
                    android:id="@+id/Timeto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Time..."
                    android:inputType="time"
                    android:minHeight="48dp" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageButton
                    android:id="@+id/imgBtnTimeTo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_access_time_24"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_weight="1"
                    android:background="background:@null"
                    />
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="25dp"
        >

        <Button
            android:id="@+id/btnPost"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Post"
            app:cornerRadius="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#ff0000"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            />

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_home_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="background:@null"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>


        <ImageButton
            android:id="@+id/imageButtonSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_chat_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="background:@null"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_person_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="background:@null"/>
    </LinearLayout>


</LinearLayout>
